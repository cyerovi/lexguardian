{
    "name": "diagnostico-pdp",
    "version": "1.0.0",
    "description": "Sistema de Diagnóstico de Protección de Datos Personales",
    "main": "server.js",
    "scripts": {
        "start": "node dist/src/server/index.js",
        "dev": "concurrently -k \"npm:dev:server\" \"npm:client:dev\"",
        "dev:server": "nodemon --watch src --exec \"npm run build && node dist/server/index.js\"",
        "build": "tsc -p tsconfig.json",
        "typecheck": "tsc -p tsconfig.json --pretty",
        "test": "node test_workflow.js",
        "lint": "eslint .",
        "format": "prettier -w .",
        "infra:up": "docker compose up -d",
        "infra:down": "docker compose down -v",
        "infra:logs": "docker compose logs -f | cat",
        "client:dev": "npm --prefix client run dev",
        "client:build": "npm --prefix client run build",
        "client:preview": "npm --prefix client run preview"
    },
    "engines": {
        "node": "18.x",
        "npm": "9.x"
    },
    "dependencies": {
        "@aws-sdk/client-s3": "^3.879.0",
        "@aws-sdk/s3-request-presigner": "^3.879.0",
        "body-parser": "^1.20.2",
        "cors": "^2.8.5",
        "dotenv": "^16.4.5",
        "express": "^4.18.2",
        "express-rate-limit": "^7.4.0",
        "helmet": "^8.1.0",
        "mime-types": "^3.0.1",
        "nodemailer": "^6.9.7",
        "pg": "^8.11.3",
        "puppeteer": "^24.18.0",
        "uuid": "^9.0.1"
    },
    "devDependencies": {
        "@eslint/js": "^9.9.0",
        "@types/body-parser": "^1.19.6",
        "@types/cors": "^2.8.19",
        "@types/express": "^5.0.3",
        "@types/mime-types": "^3.0.1",
        "@types/node": "^24.3.0",
        "@types/nodemailer": "^7.0.1",
        "@types/pg": "^8.15.5",
        "@types/uuid": "^10.0.0",
        "concurrently": "^9.2.1",
        "eslint": "^9.9.0",
        "globals": "^15.8.0",
        "nodemon": "^3.0.2",
        "prettier": "^3.3.3",
        "typescript": "^5.9.2"
    },
    "keywords": [
        "pdp",
        "compliance",
        "data-protection",
        "evaluation"
    ],
    "author": "Agencia43",
    "license": "ISC",
    "type": "module"
}
