{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "allowJs": true,
    "checkJs": false,
    "noEmit": false,
    "sourceMap": true
  },
  "include": ["src/**/*.ts", "server.js"],
  "exclude": ["node_modules", "dist"]
}

